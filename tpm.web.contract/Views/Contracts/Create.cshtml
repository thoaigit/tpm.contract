<div>
    <div class="card card-body">
        <div>
            <ul class="nav nav-tabs nav-tabs-highlight nav-justified">
                <li id="tab1" class="nav-item"><a href="#" class="nav-link active" onclick="openTab(event, 'Tab1')">Hợp Đồng</a></li>
                <li id="tab2" class="nav-item"><a href="#" class="nav-link" onclick="openTab(event, 'Tab2')">Dịch Vụ</a></li>
                <li id="tab3" class="nav-item"><a href="#" class="nav-link " onclick="openTab(event, 'Tab3')">Chi Tiết Dịch Vụ</a></li>
            </ul>
        </div>
        <div>
            <div id="Tab1" class="tabcontent">
                <div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label class="form-label">Loại Hợp Đồng:</label>
                                <select class="form-select" id="contractsTypeDropdown">
                                    @if (ViewBag.ContractTypes != null)
                                    {
                                        @foreach (var contracttype in ViewBag.ContractTypes)
                                        {
                                            <option value="@contracttype.Contract_Type_ID">@contracttype.Contract_Type_Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <p>Danh sách trống.</p>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label class="form-label" for="contractNumber">Số Hợp Đồng:</label>
                                <input class="form-control" type="text" placeholder="Số Hợp Đồng" id="contractNumber">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label class="form-label" for="customerCompanyName">Tên Công Ty:</label>
                                <input class="form-control" type="text" placeholder="Tên Công Ty" id="customerCompanyName">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="address">Địa Chỉ Liên Hệ:</label>
                                <input class="form-control" type="text" id="address">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="address">Địa Chỉ Công Ty:</label>
                                <input class="form-control" type="text" id="address2">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="phone">Điện Thoại:</label>
                                <input class="form-control" type="text" placeholder="09(xxxx)" id="phone">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="mobilePhone">Điện Thoại Di Động:</label>
                                <input class="form-control" type="text" placeholder="09(xxxx)" id="mobilePhone">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="tin">Mã Số Thuế:</label>
                                <input class="form-control" type="text" placeholder="Mã số Thuế" id="tin">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="mb-3">
