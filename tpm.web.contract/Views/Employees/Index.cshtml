@{
    ViewData["Title"] = "Danh sách nhân viên";
    List<string> BreadCrumb = new List<string>();
    //BreadCrumb.Add("<a href='index.html' class='breadcrumb-item'>name</a>");
    BreadCrumb.Add("<span class='breadcrumb-item active'> Nhân viên</span>");
    ViewBag.BreadCrumb = BreadCrumb;
}

<div class="d-flex align-items-center">
    <a class="btn btn-primary" asp-action="Create" style="margin: 7px 7px">Thêm Nhân Viên</a>

    <div id="DataTables_Table_0_filter" class="dataTables_filter; flex: 1; text-align: center;">
        <label>
            <span class="me-3">Filter:</span>
            <div class="form-control-feedback form-control-feedback-end flex-fill; width: 100%; font-size: inherit; padding: 0.375rem 0.75rem;">
                <input type="search" style="width: 100%;" class="form-control" placeholder="Type to filter..." aria-controls="DataTables_Table_0" />
            </div>
        </label>
    </div>
</div>


<div class="content">
    <div class="card">
        <div class="card-body">
            <table class="table datatable-column-search-inputs">
                <thead>
                    <tr>
                        <th>Mã NV</th>
                        <th>CCCD</th>
                        <th>Họ Tên</th>
                        <th>Ngày Sinh</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Chức Vụ</th>
                        <th>Phòng Ban</th>
                        <th>Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>

                    @if (ViewBag.ObjList != null)
                    {

                        @foreach (var employee in ViewBag.ObjList)
                        {
                            // Khai báo biến đếm và tăng giá trị sau mỗi lần lặp

                            <tr>
                                <td>@employee.EmployeeID</td>
                                <td>@employee.NationalityID</td>
                                <td>@employee.FullName</td>
                                <td>@employee.DOB</td>
                                <td>@employee.Phone</td>
                                <td>@employee.Email</td>
                                <td>@employee.EmployeeTypeID</td>
                                <td>@employee.DepartmentID</td>
                                <td>@employee.IsActived</td>
                                <td>
                                    <a href="#"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="#"><i class="fa-solid fa-trash-can"></i></a>
                                </td>
                            </tr>
                            // Tăng giá trị biến đếm sau mỗi lần lặp
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
        
    
</div>
